{
	"manifest_version": 2,
	"name": "Helix Sidekick",
  "version": "1.0",
  "homepage_url": "https://www.hlx.page/tools/sidekick/",
  "default_locale": "en",
	"options_page": "options.html",
	"description": "__MSG_description__",
	"permissions": [
		"storage",
    "tabs",
    "activeTab",
    "https://*/*",
    "http://localhost:3000/*"
  ],
	"background": {
		"page": "background.html"
  },
  "web_accessible_resources": [
    "utils.js",
    "controller.js"
  ],
	"browser_action": {
    "default_title": "Helix Sidekick",
		"default_icon": {
			"16": "./icons/helix_logo_16.png",
			"32": "./icons/helix_logo_32.png",
			"48": "./icons/helix_logo_48.png",
			"128": "./icons/helix_logo_128.png"
		}
	},
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+5",
        "mac": "MacCtrl+Shift+5"
      },
      "description": "__MSG_description_shortcut__"
    }
  },
  "icons": {
		"16": "./icons/helix_logo_16.png",
		"32": "./icons/helix_logo_32.png",
		"48": "./icons/helix_logo_48.png",
		"128": "./icons/helix_logo_128.png"
	}
}
